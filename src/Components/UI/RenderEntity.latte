<div class="row" n:foreach="$fields as $label=>$field">
    {if $label}
        <div class="col-md-4">
            {$label}
        </div>
        <div class="col-md-8">
            {$field}
        </div>
    {else}
        <div class="col-md-12">
            {$field}
        </div>
    {/if}
</div>
